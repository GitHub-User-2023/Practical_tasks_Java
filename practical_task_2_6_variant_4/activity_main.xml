<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="@string/info1"
        android:textSize="20sp"
        android:layout_marginTop="32sp"
        />
    <EditText
        android:id="@+id/etDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/duration"
        android:layout_below="@id/tvInfo"
        android:layout_marginTop="32sp"
        />
    <EditText
        android:id="@+id/etPersent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/percent"
        android:layout_below="@id/etDuration"
        />
    <EditText
        android:id="@+id/etStartSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/start_sum"
        android:layout_below="@id/etPersent"
        />
    <Button
        android:id="@+id/btnSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etStartSum"
        android:text="@string/sum"
        android:layout_marginTop="32sp"
        />
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSum"
        android:text="@string/result"
        android:textSize="20sp"
        android:layout_marginTop="32sp"
        />
    <TextView
        android:id="@+id/tvResultSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResult"
        android:text=""
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tvResultMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResultSum"
        android:text="@string/monthResult"
        android:textSize="20sp"
        android:layout_marginTop="32sp"
        />
    <TextView
        android:id="@+id/tvResultSumMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResultMonth"
        android:text=""
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tvPersonalDataName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvPersonalDataGroup"
        android:text="@string/personal_data_name"
        android:textSize="20sp"
        android:layout_marginTop="32sp"
        android:background="@color/grey"
        />
    <TextView
        android:id="@+id/tvPersonalDataGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personal_data_group"
        android:textSize="20sp"
        android:background="@color/grey"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
